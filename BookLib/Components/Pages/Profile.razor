} *@

@code {
    public List<UserCurrent> currUsers { get; set; } = new List<UserCurrent>();

    [SupplyParameterFromForm(FormName = "EditUser")]
    public ProfileModel profileModel { get; set; } = new();
    

    protected override async Task OnInitializedAsync()
    {
        currUsers = await UserCurrRepos.GetAllCurrentAsync();
    }
    private void SendToEdit()
    {
        if (currUsers != null)
        {
            Navigation.NavigateTo($"/edit_user/{currUsers[0].UserId}");
        }
    }
    public class ProfileModel { }
}
